                    "required": ["bar"]
                },
                {
                    "properties": {
                        "foo": {"type": "string"}
                    },
                    "required": ["foo"]
                }
            ]
        },
        "tests": [
            {
                "description": "first oneOf valid (complex)",
                "data": {"bar": 2},
                "valid": true
            },
            {
                "description": "second oneOf valid (complex)",
                "data": {"foo": "baz"},
                "valid": true
            },
            {
                "description": "both oneOf valid (complex)",
                "data": {"foo": "baz", "bar": 2},
                "valid": false
            },
            {
                "description": "neither oneOf valid (complex)",
                "data": {"foo": 2, "bar": "quux"},
                "valid": false
            }
        ]
    }
